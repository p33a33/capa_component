{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "removeComments": true,
    "declaration": true,
    "jsx": "react",
    "lib": ["es2015", "dom"]
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "src/stories",
    "src/index.css",
    "src/index.tsx",
    "src/App.tsx",
    "src/reportWebVitals"
  ],
  "files": ["src/index.ts"]
}
